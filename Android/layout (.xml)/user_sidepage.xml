<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20sp"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/back_x"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_gravity="right"
        android:backgroundTint="#00ff0000"
        android:scaleType="fitCenter"
        android:src="@drawable/mypage_x" />

    <!--<TextView
        android:id="@+id/nameMarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="한이음가게"
        android:textColor="#000000"
        android:textSize="18sp" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/nameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한이음"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" 님"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <Space
        android:layout_width="0sp"
        android:layout_height="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:backgroundTint="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/mypage_home"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="홈"
                android:textColor="#000000"/>

        </LinearLayout>

        <Space
            android:layout_width="30sp"
            android:layout_height="0sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/my_page"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:backgroundTint="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/mypage_user"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="마이페이지"
                android:textColor="#000000"/>
        </LinearLayout>

        <Space
            android:layout_width="30sp"
            android:layout_height="0sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/set_cctv"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:backgroundTint="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/mypage_cctv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CCTV"
                android:textColor="#000000"/>
        </LinearLayout>

        <Space
            android:layout_width="30sp"
            android:layout_height="0sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/alarm_list"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:backgroundTint="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/mypage_alarm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="알림"
                android:textColor="#000000"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="5sp"
        android:background="#dcdcdc" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:text="영상"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/live_video"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left"
                android:text="실시간 영상"
                android:textColor="#000000" />

            <Button
                android:id="@+id/video_list"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left"
                android:text="영상 목록"
                android:textColor="#000000" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:backgroundTint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:text="재고관리"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/allStock"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left"
                android:text="전체 재고 관리"
                android:textColor="#000000" />

            <Button
                android:id="@+id/dpStock"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left"
                android:text="매장 재고 관리"
                android:textColor="#000000" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:text="설정"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/set_cctv2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left"
                android:text="CCTV 설정"
                android:textColor="#000000" />

            <Button
                android:id="@+id/set_alarm"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left"
                android:text="알림 설정"
                android:textColor="#000000" />

            <Button
                android:id="@+id/set_app"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left"
                android:text="앱 설정"
                android:textColor="#000000" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:text="CATCHA"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/qna"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18sp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left"
                android:text="문의"
                android:textColor="#000000" />

            <Button
                android:id="@+id/info_app"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left"
                android:text="앱 정보"
                android:textColor="#000000" />

            <Button
                android:id="@+id/logout"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_gravity="center"
                android:text="로그아웃"
                android:textColor="#777777"
                android:textSize="20sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>