<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_margin="10sp">

        <ImageButton
            android:id="@+id/userSidePage"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:backgroundTint="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/mypage_button" />

        <View
            android:layout_width="150sp"
            android:layout_height="0sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="10sp"
            android:text="CATCHA"
            android:textColor="#000000"
            android:textSize="28sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="최근 절도 의심 영상"
                android:textColor="#000000"
                android:textSize="20sp"/>


            <ImageView
                android:id="@+id/recentSuspectVideo"
                android:layout_width="350sp"
                android:layout_height="250sp"
                android:layout_gravity="center"
                android:layout_margin="30sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/liveVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_gravity="left"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#000000"
                    android:text="> 실시간 보기"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="70sp"
                    android:layout_height="0sp"/>

                <Button
                    android:id="@+id/videoList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_gravity="right"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#000000"
                    android:text="> 영상 목록"
                    android:textSize="16sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="30sp"
                android:background="#dcdcdc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="재고 관리"
                android:textColor="#000000"
                android:textSize="20sp"/>

            // recyclerview+cardview로 바꾸기. 유튜브 참고
            <ImageView
                android:id="@+id/summaryStock"
                android:layout_width="350sp"
                android:layout_height="250sp"
                android:layout_gravity="center"
                android:layout_margin="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/allStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#000000"
                    android:text="> 전체 재고 관리"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="50sp"
                    android:layout_height="0sp"/>

                <Button
                    android:id="@+id/dpStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#000000"
                    android:text="> 매장 재고 관리"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100sp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>